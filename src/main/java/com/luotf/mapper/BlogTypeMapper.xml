<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luotf.mapper.BlogTypeMapper">
  <resultMap id="BaseResultMap" type="com.luotf.model.BlogType">
   
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="typeName" jdbcType="VARCHAR" property="typename" />
    <result column="num" jdbcType="INTEGER" property="num" />
   <result column="addTime" jdbcType="TIMESTAMP" property="addtime" />
   
    <!-- 配置 一对多 关联关系 -->
    <collection property="blogs" javaType="ArrayList" column="id"
    ofType="com.luotf.model.Blog" select="com.luotf.mapper.BlogMapper.selectBlogByTypeId" fetchType="lazy">
    
    </collection>
    
  </resultMap>
  <sql id="Base_Column_List">
    
    id, typeName, num,addTime
  </sql>
   
  <select id="selectBlogTypeListByPage" parameterType="Map" resultMap="BaseResultMap">
	SELECT 
	<include refid="Base_Column_List" />
		 from t_blogtype
		<where>
		 	<if test="typeName!=null and typeName!=''">
		 		and typeName like CONCAT(CONCAT('%', #{typeName}), '%')
		 	</if>
		 	
		 	<if test="addTime!=null and addTime!=''">
		 		and DATE_FORMAT(addTime,'%Y-%m-%d')=#{addTime}
		 	</if>
		 </where>
		  ORDER BY addTime DESC
		 <!--  <if test="pageNow!=null and pageSize!=null">
		 	limit #{pageNow},#{pageSize}
		 </if>
		 -->
	</select>
  
  
  <select id="selectBlogTypeById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    
    select 
    <include refid="Base_Column_List" />
    from t_blogtype
    where id = #{id,jdbcType=INTEGER}
  </select>
  <delete id="deleteBlogTypeById" parameterType="java.lang.Integer">
    
    delete from t_blogtype
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insertBlogType" parameterType="com.luotf.model.BlogType">
    
    insert into t_blogtype (id, typeName, num
      )
    values (#{id,jdbcType=INTEGER}, #{typename,jdbcType=VARCHAR}, #{num,jdbcType=INTEGER}
      )
  </insert>
  <insert id="insertBlogTypeSelective" parameterType="com.luotf.model.BlogType">
    
    insert into t_blogtype
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="typename != null">
        typeName,
      </if>
      <if test="num != null">
        num,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="typename != null">
        #{typename,jdbcType=VARCHAR},
      </if>
      <if test="num != null">
        #{num,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  <update id="updateBlogTypeSelective" parameterType="com.luotf.model.BlogType">
    
    update t_blogtype
    <set>
      <if test="typename != null">
        typeName = #{typename,jdbcType=VARCHAR},
      </if>
      <if test="num != null">
        num = #{num,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
  <update id="updateBlogType" parameterType="com.luotf.model.BlogType">
    
    update t_blogtype
    set typeName = #{typename,jdbcType=VARCHAR},
      num = #{num,jdbcType=INTEGER}
    where id = #{id,jdbcType=INTEGER}
  </update>
  
</mapper>